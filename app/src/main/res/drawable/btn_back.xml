<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#bcb0b0" android:endColor="#fff"></gradient>
            <stroke android:width="2dp" android:color="#897b7b"></stroke>
        </shape>

    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#a3161d" android:endColor="#ffffff"></gradient>
            <stroke android:color="#000"></stroke>
        </shape>

    </item>
</selector>